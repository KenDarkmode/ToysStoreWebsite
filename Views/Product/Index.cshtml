@model IEnumerable<Nhom07_ThuyetTrinh.Models.Product>
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using Nhom07_ThuyetTrinh.Controllers

@inject IStringLocalizer<HomeController> Localizer
@inject IHtmlLocalizer<HomeController> HtmlLocalizer

@inject IStringLocalizer<ProductController> Localizer

<h2>@Localizer["Products"]</h2>
<table class="table">
    <thead>
        <tr>


            <th>@Localizer["Products"]</th>
            <th>@Localizer["Price"]</th>
            <th>@Localizer["Name"]</th>
            <th>@Localizer["Actions"]</th>
            
            <th>@Localizer["Description"]</th>
           
 
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Description</td>

                <td>
                    <a asp-action="Add" asp-route-id="@product.Id">@Localizer["Add"]</a>     |
                    <a asp-action="Display" asp-route-id="@product.Id">@Localizer["Display"]</a>  |
                    <a asp-action="Update" asp-route-id="@product.Id">@Localizer["Edit"]</a>   |
                    <a asp-action="Delete" asp-route-id="@product.Id">@Localizer["Delete"]</a> |
                    <img src="@product.ImageUrl" style="width: 150px; height: 80px" />
                </td>
            </tr>
        }
    </tbody>
</table>
