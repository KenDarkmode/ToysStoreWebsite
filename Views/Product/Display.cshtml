@model Nhom07_ThuyetTrinh.Models.Product
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using Nhom07_ThuyetTrinh.Controllers

@inject IStringLocalizer<HomeController> Localizer
@inject IHtmlLocalizer<HomeController> HtmlLocalizer

@inject IStringLocalizer<ProductController> Localizer

<h2>@Localizer["Product Details"]</h2>
<div>
    <h4>@Localizer["Name"]: @Model.Name</h4>
    <h4>@Localizer["Price"]: @Model.Price</h4>
    <h4>@Localizer["Description"]: @Model.Description</h4>
    <img src="@Model.ImageUrl" alt="@Localizer["Product Image"]" style="width: 300px; height: auto;" />
    @if (Model.ImageUrls != null)
    {
        foreach (var imageUrl in Model.ImageUrls)
        {
            <img src="@imageUrl" alt="@Localizer["Product Image"]" style="width:300px; height: auto;" />
        }
    }
</div>
<a asp-action="Index" class="btn btn-secondary">@Localizer["Back to Products"]</a>
